@model LoginUserViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documento</title>
    <link rel="stylesheet" href="~/css/stylelogin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="bg-dark">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="~/Media/fondologin.png" class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <h1>WELCOME USER</h1>

                    <form asp-action="Login" asp-controller="Account" method="POST" id="form">
                        <div asp-validation-summary=All class="text-danger"></div>
                        <!-- Name input
    <div class="form-outline mb-4">
        <input type="text" id="name" class="form-control form-control-lg" />
        <label class="form-label">Name</label>
    </div>
    -->
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="email" class="form-control form-control-lg" />
                            <label asp-for="Email" class="form-label">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" />
                            <label asp-for="Password" class="form-label">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>





                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                        <a asp-action="SignUp" asp-controller="Account" class="btn btn-success btn-lg btn-block ">Doesn not have an account?Create one</a>


                        <p class="warnings" id="warnings"></p>


                    </form>

                </div>
            </div>
        </div>
    </section>
    @*<script src="~/js/app.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>
</html>